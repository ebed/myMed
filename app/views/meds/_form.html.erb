<%= simple_form_for [@customer, @med] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :med_name %>
    <%= f.input :dosage %>
    <%= f.input :amount %>
    <%= f.input :start_date, start_year: Time.now.year - 100, end_year: Time.now.year  %>
    <%= f.input :customer_id, :as => :hidden, :input_html => { :value => @customer.id } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
