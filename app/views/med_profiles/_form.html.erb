<%= simple_form_for [@customer, @med_profile] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :condition %>
    <%= f.input :start_date %>
    <%= f.input :customer_id, :as => :hidden, :input_html => { :value => @customer.id } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
