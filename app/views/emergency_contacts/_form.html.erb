<%= simple_form_for(@emergency_contact) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :fname %>
    <%= f.input :lname %>
    <%= f.input :contact_phone %>
    <%= f.input :contact_mob_phone %>
    <%= f.input :contact_email %>
    <%= f.input :contact_address %>
    <%= f.input :contact_city %>
    <%= f.input :contact_state %>
    <%= f.input :contact_country %>
    <%= f.input :contact_zip %>
    <%= f.input :contact_relationship %>
    <%= f.input :contact_photo %>
    <%= f.input :customer_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
