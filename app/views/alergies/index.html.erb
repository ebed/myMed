<h1>Listing alergies</h1>

<table>
  <thead>
    <tr>
      <th>Alergy name</th>
      <th>Start date</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alergies.each do |alergy| %>
      <tr>
        <td><%= alergy.alergy_name %></td>
        <td><%= alergy.start_date %></td>
        <td><%= alergy.customer_id %></td>
        <td><%= link_to 'Show', alergy %></td>
        <td><%= link_to 'Edit', edit_alergy_path(alergy) %></td>
        <td><%= link_to 'Destroy', alergy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Alergy', new_alergy_path %>
