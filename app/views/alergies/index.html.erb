<h1>Listing Alergies</h1>

<table>
  <thead>
    <tr>
      <th>Alergy name</th>
      <th>Start date</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @alergies.each do |alergy| %>
      <tr>
        <td><%= alergy.alergy_name %></td>
        <td><%= alergy.start_date %></td>

        <td><%= link_to 'Edit', edit_customer_alergy_path(@customer, alergy) %></td>
        <td><%= link_to 'Destroy', alergy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Alergy', new_customer_alergy_path(@customer) %>
